@model ContentCreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create New Content</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create" asp-controller="Content" asp-area="Admin"
              asp-antiforgery="true">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label asp-for="Category">Category</label>
                    <input type="text" class="form-control" asp-for="Category">
                </div>
                <div class="form-group">
                    <label asp-for="Duration">Duration</label>
                    <input type="text" class="form-control" asp-for="Duration" min="0">
                </div>

                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </form>
    </div>
    <!-- /.card -->
</div>

